{
  "name": "githulu",
  "version": "0.1.0",
  "private": true,
  "description": "A local-first Git desktop client for macOS with rebase-first workflows",
  "author": "Brent Linville",
  "license": "MIT",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "@parcel/watcher",
      "sharp",
      "vue-demi"
    ]
  },
  "scripts": {
    "dev": "pnpm --filter githulu-ui dev & pnpm --filter githulu-electron dev",
    "dev:ui": "pnpm --filter githulu-ui dev",
    "dev:electron": "pnpm --filter githulu-electron dev",
    "build": "pnpm --filter githulu-ui build && pnpm --filter githulu-electron build",
    "package": "pnpm build && pnpm --filter githulu-electron package",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  }
}
